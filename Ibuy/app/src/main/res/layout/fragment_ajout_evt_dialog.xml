<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ibuy.misa.ibuy.AjoutEvtDialog">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="346dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/textView9"
            style="@style/TextTitle"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Nouveau " />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/eDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Date"
                android:inputType="date" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/eLibelle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Intitulé"
                android:inputType="text" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Préférences" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/eMotCle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mot clé"
                android:inputType="text" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Magasin" />

        <Spinner
            android:id="@+id/spinMag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Catégorie" />

        <Spinner
            android:id="@+id/spinCat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/pMin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Prix min"
                android:inputType="numberDecimal"
                android:text="0"
                android:textAlignment="textEnd" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/pMax"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Prix max"
                android:inputType="numberDecimal"
                android:text="0"
                android:textAlignment="textEnd" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

</LinearLayout>
